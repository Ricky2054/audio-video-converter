{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["public/**"],
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/download/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/upload",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
